<p id="notice"><%= notice %></p>

<h1>Listing Workflow Details</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Workflow master</th>
      <th>Next</th>
      <th>Previous</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workflow_details.each do |workflow_detail| %>
      <tr>
        <td><%= workflow_detail.company_id %></td>
        <td><%= workflow_detail.workflow_master_id %></td>
        <td><%= workflow_detail.next %></td>
        <td><%= workflow_detail.previous %></td>
        <td><%= link_to 'Show', workflow_detail %></td>
        <td><%= link_to 'Edit', edit_workflow_detail_path(workflow_detail) %></td>
        <td><%= link_to 'Destroy', workflow_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

