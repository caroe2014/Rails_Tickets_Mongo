<div class="container">
	<p id="notice"><%= notice %></p>
	
	<h1>Listing Locations</h1>
	
	<table>
	  <thead>
	    <tr>

	      <th>Name</th>
	      <th>Shortname</th>
	      <th>Address1</th>
	      <th>Address2</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @locations.each do |location| %>
	      <tr>
	      	
	        <td><%= location.name %></td>
	        <td><%= location.shortname %></td>
	        <td><%= location.address1 %></td>
	        <td><%= location.address2 %></td>
	        <td><%= link_to 'Show', location ,:class => "btn btn-success" %></td>
	        <td><%= link_to 'Edit', edit_location_path(location), :class => "btn btn-warning" %></td>
	        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
	        <td><%= link_to 'New Tickets', new_location_printing_ticket_path(location), :class => "btn btn-info" %></td>
	        <td><%= link_to 'List Tickets', location_printing_tickets_path(location), :class => "btn btn-info" %></td>	        
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	<br>
	
	<%= link_to 'New Location', new_location_path, :class => "btn btn-info" %>
</div>
