<p id="notice"><%= notice %></p>

<h1>Listing Job States</h1>

<table>
  <thead>
    <tr>
      <th>Step number</th>
      <th>Name</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_states.each do |job_state| %>
      <tr>
        <td><%= job_state.step_number %></td>
        <td><%= job_state.name %></td>
        <td><%= job_state.status %></td>
        <td><%= link_to 'Show', job_state %></td>
        <td><%= link_to 'Edit', edit_job_state_path(job_state) %></td>
        <td><%= link_to 'Destroy', job_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

