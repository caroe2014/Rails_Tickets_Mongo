<div class="container">
	<p id="notice"><%= notice %></p>
	
	<h1>Listing Job States</h1>
	
	<table>
	  <thead>
	    <tr>
	      <th>Name</th>
	      <th>Step #</th>
	      <th>Color</th>
	      <th>Status</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @job_states.each do |job_state| %>
	      <tr>
	      	<td><%= link_to job_state.name, edit_job_state_url(job_state._id, job_state) %></td>
	        <td><%= link_to job_state.step_number, edit_job_state_url(job_state._id, job_state) %></td>
	        <td><%= link_to job_state.color, edit_job_state_url(job_state._id, job_state) %></td>
	        <td><%= link_to job_state.status, edit_job_state_url(job_state._id, job_state) %></td>
	        <td><%= link_to 'Show', job_state %></td>
	        <td><%= link_to 'Edit', edit_job_state_path(job_state) %></td>
	        <td><%= link_to '-', job_state, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
	
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	
	<br>
	
	<%= link_to '+', new_job_state_path(@project_id), :class => "btn btn-info" %>
	<%= link_to 'Back', root_path, :class => "btn btn-info" %>
</div>
