<p id="notice"><%= notice %></p>
	
<div class="container">
	<h3>Listing Projects</h3>
	
	<table ng-controller="itemsControllerHiddenDiv">
	  <thead>
	    <tr>
	      <th>&nbsp;</th>
	      <th>Name</th>
	      <th>Nickname</th>
	      <th>P.Number</th>
	      <th>Status</th>      
	      <th colspan="3"></th>
	    </tr>
	  </thead>
	
	  <tbody>
	 
	    <% @projects.each do |project| %>
	      <tr>    	
	        <td><%= link_to project.name, edit_project_path(project) %></td>
	        <td><%= project.nickname %></td>
	        <td><%= project.project_number %></td>
	        <td><%= project.status %></td>
	        <td><%= link_to '-', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
	        <td><%= link_to 'List Tickets', project_tickets_path(project), data: {project_id: project } , :class => "btn btn-info" %></td>
	        <td><%= link_to 'List PTickets', project_printing_tickets_path(project), data: {project_id: project }, :class => "btn btn-success" %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	
	<br>

	<%= link_to 'Back', main_menus_home_path, :class => "btn btn-info" %>	
	<%= link_to '+', new_project_path, :class => "btn btn-info" %>

</div>
